{
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es6",
		"lib": ["es2016"],
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}
